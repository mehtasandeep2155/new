{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-main-service/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-main-service/tsconfig.app.json",
    "plugins": [
      "@nestjs/swagger"
    ]
  },
  "monorepo": true,
  "root": "apps/api-main-service",
  "projects": {
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json",
        "plugins": [
          "@nestjs/swagger"
        ]
      }
    },
    "company": {
      "type": "application",
      "root": "apps/company",
      "entryFile": "main",
      "sourceRoot": "apps/company/src",
      "compilerOptions": {
        "tsConfigPath": "apps/company/tsconfig.app.json",
        "plugins": [
          "@nestjs/swagger"
        ]
      }
    },
    "communication": {
      "type": "application",
      "root": "apps/communication",
      "entryFile": "main",
      "sourceRoot": "apps/communication/src",
      "compilerOptions": {
        "tsConfigPath": "apps/communication/tsconfig.app.json",
        "plugins": [
          "@nestjs/swagger"
        ]
      }
    },
    "module": {
      "type": "application",
      "root": "apps/module",
      "entryFile": "main",
      "sourceRoot": "apps/module/src",
      "compilerOptions": {
        "tsConfigPath": "apps/module/tsconfig.app.json",
        "plugins": [
          "@nestjs/swagger"
        ]
      }
    },
    "product": {
      "type": "application",
      "root": "apps/product",
      "entryFile": "main",
      "sourceRoot": "apps/product/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product/tsconfig.app.json"
      }
    },
    "api-main-service": {
      "type": "application",
      "root": "apps/api-main-service",
      "entryFile": "main",
      "sourceRoot": "apps/api-main-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-main-service/tsconfig.app.json"
      }
    }
  }
}